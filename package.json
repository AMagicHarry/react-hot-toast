{
  "name": "react-hot-toast",
  "description": "Smoking hot React Notifications. Lightweight, customizable and beautiful by default.",
  "version": "2.2.0",
  "author": "Timo Lins",
  "license": "MIT",
  "sideEffects": false,
  "repository": "timolins/react-hot-toast",
  "keywords": [
    "react",
    "notifications",
    "toast",
    "snackbar"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "test": "jest",
    "setup": "pnpm i && cd site && pnpm i && cd .. && pnpm run link",
    "link": "pnpm link ./site/node_modules/react && pnpm link ./site/node_modules/react-dom",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "es5"
  },
  "module": "dist/react-hot-toast.esm.js",
  "size-limit": [
    {
      "path": "dist/react-hot-toast.cjs.production.min.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/react-hot-toast.esm.js",
      "limit": "5 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.4",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "csstype": "^3.0.7",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "jest-matchmedia-mock": "^1.1.0",
    "size-limit": "^4.9.1",
    "ts-jest": "^28.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "goober": "^2.1.10"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  }
}
