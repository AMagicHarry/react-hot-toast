{
  "name": "react-hot-toast",
  "version": "0.2.1",
  "author": "Timo Lins",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "es5"
  },
  "module": "dist/hot-toast.esm.js",
  "size-limit": [
    {
      "path": "dist/hot-toast.cjs.production.min.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/hot-toast.esm.js",
      "limit": "5 KB"
    }
  ],
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "tsdx": "^0.14.1"
  },
  "dependencies": {
    "goober": "^2.0.15"
  }
}
