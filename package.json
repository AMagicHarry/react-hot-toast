{
  "name": "react-hot-toast",
  "description": "Smoking hot React Notifications. Lightweight, customizable and beautiful by default.",
  "version": "2.2.0",
  "author": "Timo Lins",
  "license": "MIT",
  "repository": "timolins/react-hot-toast",
  "keywords": [
    "react",
    "notifications",
    "toast",
    "snackbar"
  ],
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./headless": {
      "import": "./headless/index.esm.js",
      "require": "./headless/index.js",
      "types": "./headless/index.d.ts"
    }
  },
  "files": [
    "headless",
    "dist",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "lint": "tsdx lint",
    "test": "echo \"No test specified\"",
    "setup": "pnpm i && cd site && pnpm i && cd .. && pnpm run link",
    "link": "pnpm link ./site/node_modules/react && pnpm link ./site/node_modules/react-dom",
    "prepare": "tsup",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "5 KB"
    },
    {
      "path": "headless/index.js",
      "limit": "2 KB"
    },
    {
      "path": "headless/index.esm.js",
      "limit": "2 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "csstype": "^3.0.7",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "goober": "^2.1.10"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  }
}
